<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/menu_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_layout"
        tools:context=".ProductDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--Imagem do produto-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/camiseta_mockup" />

            <!--Preço-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="R$ 89,90"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <!--Cor-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/product_detail_cor"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_color"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                android:padding="16dp">

                <com.google.android.material.chip.Chip

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Branco"
                    android:checked="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Azul"
                    android:checked="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Amarelo"
                    android:checked="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Cinza"
                    android:checked="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Vermelho"
                    android:checked="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Verde"
                    android:checked="false" />

            </com.google.android.material.chip.ChipGroup>

            <!--tamanho-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/product_detail_tamanho"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tamanho"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                android:padding="16dp">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="P"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="M" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="G" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="GG" />

            </com.google.android.material.chip.ChipGroup>

            <!--Botão Comprar -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorAccent"
                android:text="@string/product_detail_button_comprar"
                android:textColor="@android:color/white" />

            <!--Descrição-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/product_detail_descricao"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <!--Conteúdo da Descrição-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="asdsa dsa dsa dsa dsadsadsadsad sad as dsadsadsadsadsa sadsd sa dsad sad sadsa"
                android:textAppearance="@android:style/TextAppearance.Small" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>